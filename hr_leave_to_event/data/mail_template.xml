<odoo>
    <data>
        <record id="event_finish" model="mail.template">
            <field name="name">Correo Electrónico de Evento</field>
            <field name="model_id" ref="event.model_event_event"/>
            <field name="email_from">${object.company_id.email or 'correo_de_fallback@example.com'}</field>
            <field name="email_to">${object.user_id.email}</field>
            <field name="subject">Evento Finalizado: ${object.name}</field>
            <field name="body_html" type="html">
                <div>
                    <p>Hola ${object.user_id.name},</p>
                    <p>El evento <b>${object.name}</b> ha finalizado.</p>
                    <p>Por favor, visita la ficha del evento para rellenar los datos necesarios:</p>
                     <p><a href="/web#id=${object.id}&amp;view_type=form&amp;model=event.event" style="background-color: #875A7B; color: white; padding: 10px 20px; text-decoration: none; border-radius: 5px; display: inline-block;">Ir al Evento</a></p>
                </div>
            </field>
            <field name="lang">${object.user_id.lang}</field>
        </record>

        <record id="event_pre_finish" model="mail.template">
            <field name="name">Correo Electrónico de Evento Antes de finalizar</field>
            <field name="model_id" ref="event.model_event_event"/>
            <field name="email_from">${object.company_id.email or 'correo_de_fallback@example.com'}</field>
            <field name="email_to">${object.user_id.email}</field>
            <field name="subject">Evento Finalizado: ${object.name}</field>
            <field name="body_html" type="html">
                <div>
                    <p>Hola,</p>
                    <p>El evento <b>${object.name}</b> ha finalizado.</p>
                     <p><a href="/web#id=${object.id}&amp;view_type=form&amp;model=event.event" style="background-color: #875A7B; color: white; padding: 10px 20px; text-decoration: none; border-radius: 5px; display: inline-block;">Ir al Evento</a></p>
                </div>
            </field>
            <field name="lang">${object.user_id.lang}</field>
        </record>
    </data>
</odoo>
