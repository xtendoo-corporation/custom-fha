<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="hr_leave_event_view_form" model="ir.ui.view">
        <field name="name">hr.leave.event.view.form</field>
        <field name="model">hr.leave</field>
        <field name="inherit_id" ref="hr_holidays.hr_leave_view_form"/>
        <field name="arch" type="xml">
           <xpath expr="//div[@name='description']" position="after">
               <field name="holiday_type_name" invisible="1"></field>
                <div class="row" name="event_data" attrs="{'invisible': [('holiday_type_name', '!=', 'Event attendance')]}">
                    <div class="col-12">
                        <group>
                            <group>
                                <field name="applicant_name" required="1"></field>
                                <field name="event_id" required="1"></field>
                                <field name="event_type" required="1"></field>
                                <field name="event_place" required="1"></field>
                                <field name="event_date" required="1"></field>
                            </group>
                            <group>
                                <field name="project_id" required="1"></field>
                                <field name="tittle" required="1"></field>
                                <field name="author" required="1"></field>
                                <field name="cost"></field>
                                <field name="cost_type" required="1"></field>
                            </group>
                        </group>
                        <group>
                            <field name="motivation"/>
                        </group>
                    </div>
                </div>
            </xpath>
        </field>
    </record>
</odoo>
